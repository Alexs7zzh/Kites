---
import {getImage} from 'astro:assets'
import {createClient} from '@sanity/client'
import MagneticDangoLine from '../components/MagneticDangoLine'
import {SANITY_API_VERSION, SANITY_USE_CDN} from '../lib/sanityConfig.js'
import backgroundSource from '../assets/2025-08-05-Background.jpg'
import {prepareBackgroundImage} from '../lib/backgroundImagePreparation'
import {prepareOgImage} from '../lib/ogImagePreparation'
import {imageProjection, prepareSiteContent} from '../lib/siteContentImagePreparation'

const turnstileSiteKey = import.meta.env.PUBLIC_TURNSTILE_SITE_KEY ?? ''

function getRequiredEnv(name: string): string {
  const rawValue = import.meta.env[name]
  if (typeof rawValue !== 'string' || rawValue.trim() === '') {
    throw new Error(`Missing required environment variable: ${name}`)
  }
  return rawValue.trim()
}

function nonEmpty(value: unknown): string | null {
  if (typeof value !== 'string') {
    return null
  }

  const trimmedValue = value.trim()
  return trimmedValue === '' ? null : trimmedValue
}

function normalizeHandle(value: unknown): string | null {
  const handle = nonEmpty(value)
  if (!handle) {
    return null
  }

  const sanitizedHandle = handle.replace(/^@+/, '')
  if (!sanitizedHandle) {
    return null
  }

  return `@${sanitizedHandle}`
}

function toRootUrl(value: string | URL | null | undefined): string | null {
  if (!value) {
    return null
  }

  try {
    return new URL('/', value).toString()
  } catch {
    return null
  }
}

function toAbsoluteUrl(value: string, base: string | null): string {
  try {
    return new URL(value).toString()
  } catch {
    if (!base) {
      return value
    }

    try {
      return new URL(value, base).toString()
    } catch {
      return value
    }
  }
}

const sanityProjectId = getRequiredEnv('PUBLIC_SANITY_PROJECT_ID')
const sanityDataset = getRequiredEnv('PUBLIC_SANITY_DATASET')

const client = createClient({
  projectId: sanityProjectId,
  dataset: sanityDataset,
  useCdn: SANITY_USE_CDN,
  apiVersion: SANITY_API_VERSION,
})

const query = `{
  "siteContent": *[_id == "siteContent"][0]{
    "about": about{
      "main_image": main_image{
        ${imageProjection}
      },
      text_1,
      "notation_image": notation_image{
        ${imageProjection}
      },
      text_2
    },
    "scent": scent{
      "main_image": main_image{
        ${imageProjection}
      },
      title,
      description,
      details,
      "comparison_images": coalesce(comparison_images[]{
        ${imageProjection}
      }, [])
    },
    "process": process{
      text_1,
      text_2,
      text_3,
      "gallery_images": coalesce(gallery_images[]{
        ${imageProjection}
      }, [])
    },
    "studio": studio{
      "header_images": coalesce(header_images[]{
        ${imageProjection}
      }, []),
      intro_text,
      "projects": coalesce(projects[]{
        title,
        materials,
        location,
        description,
        "main_image": main_image{
          ${imageProjection}
        },
        "secondary_image": secondary_image{
          ${imageProjection}
        },
        "extra_image": extra_image{
          ${imageProjection}
        },
        "gallery": coalesce(gallery[]{
          ${imageProjection}
        }, []),
        "gallery_vertical": coalesce(gallery_vertical[]{
          ${imageProjection}
        }, [])
      }, [])
    },
    "contact": contact{
      bio_text,
      "bio_image": bio_image{
        ${imageProjection}
      },
      form_action
    },
  },
  "siteSettings": *[_id == "siteSettings"][0]{
    siteName,
    defaultDescription,
    canonicalDomain,
    "defaultOgImage": defaultOgImage{
      "url": asset->url,
      "metadata": asset->metadata{
        dimensions{
          width,
          height
        }
      }
    },
    social{
      xHandle,
      instagramHandle
    }
  }
}`

let siteContent = null
let siteSettings = null

try {
  const response = await client.fetch(query)
  siteContent = response?.siteContent ?? null
  siteSettings = response?.siteSettings ?? null
} catch (error) {
  const message = error instanceof Error ? error.message : String(error)
  console.error(`Failed to fetch content from Sanity: ${message}`)
}

const preparedSiteContent = await prepareSiteContent(siteContent, getImage)
const preparedBackgroundImage = await prepareBackgroundImage({
  src: backgroundSource,
  getImage,
})
const preparedOgImage = await prepareOgImage({
  image: siteSettings?.defaultOgImage ?? null,
  getImage,
  maxDimension: 1200,
})

const siteName = nonEmpty(siteSettings?.siteName)
const title = siteName ?? 'Kites'

const description =
  nonEmpty(siteSettings?.defaultDescription)
const canonical =
  toRootUrl(nonEmpty(siteSettings?.canonicalDomain))
const ogImage = preparedOgImage
  ? toAbsoluteUrl(preparedOgImage.src, canonical)
  : null
const twitterSite = normalizeHandle(siteSettings?.social?.xHandle)
const robots = 'index,follow'
const twitterCard = ogImage ? 'summary_large_image' : 'summary'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link
      rel="preload"
      href={preparedBackgroundImage.preload.href}
      as="image"
      type={preparedBackgroundImage.preload.type}
      imagesrcset={preparedBackgroundImage.preload.imageSrcSet}
      imagesizes={preparedBackgroundImage.preload.imageSizes}
      fetchpriority="high"
    />
    <link
      rel="preload"
      href="/fonts/VictorMono-Regular.c6ba95eb.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    {description && <meta name="description" content={description} />}
    <meta name="robots" content={robots} />
    {canonical && <link rel="canonical" href={canonical} />}

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    {canonical && <meta property="og:url" content={canonical} />}
    {siteName && <meta property="og:site_name" content={siteName} />}
    {ogImage && <meta property="og:image" content={ogImage} />}
    {preparedOgImage && <meta property="og:image:width" content={String(preparedOgImage.width)} />}
    {preparedOgImage && <meta property="og:image:height" content={String(preparedOgImage.height)} />}

    <meta name="twitter:card" content={twitterCard} />
    <meta name="twitter:title" content={title} />
    {description && <meta name="twitter:description" content={description} />}
    {ogImage && <meta name="twitter:image" content={ogImage} />}
    {twitterSite && <meta name="twitter:site" content={twitterSite} />}
  </head>
  <body>
    {preparedSiteContent ? (
      <MagneticDangoLine
        client:load
        initialData={preparedSiteContent as any}
        turnstileSiteKey={turnstileSiteKey}
        backgroundImage={preparedBackgroundImage as any}
      />
    ) : (
      <main style="padding: 2rem; font-family: monospace;">
        Unable to load site content from Sanity.
      </main>
    )}
  </body>
</html>
